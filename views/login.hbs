<div class="container mt-4">
  <div class="row">
    <div class="col-lg-6 col-md-8 col-sm-10 mx-auto">
      <!-- Card -->
      {{#if message}}
      <div class="alert alert-{{ message.type }} alert-dismissible fade show mt-4" role=alert"">
        {{ message.text }}
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
      {{/if}}
      <div class="card">
        <div class="card-header">
          Login
        </div>
        <div class="card-body">
          <form action="/auth/login" method="POST">
            <div class="mb-3">
              <label for="email" class="form-label">Email</label>
              <input type="email" class="form-control" id="email" name="email" autocomplete="current-email">
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input type="password" class="form-control" id="password" name="password" autocomplete="current-password">
            </div>
            <button type="submit" class="btn btn-outline-primary w-100">Login</button>
          </form>
        </div>
      </div>
      <!-- End of Card -->

    </div>
  </div>
</div>